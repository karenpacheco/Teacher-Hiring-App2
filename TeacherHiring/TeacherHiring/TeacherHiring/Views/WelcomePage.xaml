<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeacherHiring.Views.WelcomePage"
             Title="Inicio">
    <ContentPage.Content>
        <StackLayout BackgroundColor="WhiteSmoke"  VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand">
            <Label Text="BIENVENIDO"
                   TextColor="#10103d" Font="Bold,20"
                   ></Label>
            <Label 
                   TextColor="#10103d" Font="Bold,14"
                   Text="{Binding LabelUsrText}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>